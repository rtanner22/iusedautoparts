                <div class="btn-group">
                  <button type="button" class="btn btn-dropdown btn-lg dropdown-toggle active" data-toggle="dropdown"> <span class="selection">Select Options</span> <span class="caret"></span> </button>
                  <ul class="dropdown-menu" role="menu">
                  </ul>
                </div>
